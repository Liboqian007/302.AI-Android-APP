                    android:background="@drawable/icon_down"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apiKeyCustomizeLine"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp"
